{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
    "exclude": ["node_modules", "dist"]
}